/**index.wxss**/
.global-layout-container .header {
  display: flex;
  background: #da8a8a;
  height: 250rpx;
  flex: 1;
  margin: 20rpx;
  border-radius: 20rpx;
  align-items: center;
}

.global-layout-container .header .img-btn {
  border: none;
  border-radius: 100%;
  width: 170rpx;
  height: 170rpx;
  display: flex;
  margin: 20rpx;
  padding: 0;
}

.global-layout-container .header .img-btn .avatar {
  width: 100%;
  height: 100%;
}

.global-layout-container .header .intro {
  border: 1rpx solid #000000;
  display: flex;
  flex: 1;
  height: 180rpx;
  margin: 20rpx;
  padding: 20rpx;
  align-items: center;
}
