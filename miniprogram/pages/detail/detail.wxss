/* miniprogram/pages/detail/detail.wxss */
@import "../../static/css/page.wxss";
@import "../../static/css/decorator.wxss";

.container {
  width: 700rpx;
  margin: 30rpx 0;
}

.main-info-board {
  background: #eeeeee;
  padding: 20rpx;
}

.main-info-board .title {
  font-size: 38rpx;
  color: #444444;
  padding-bottom: 15rpx;
}

.main-info-board .created-at {
  color: #777777;
  padding-top: 5rpx;
}


.dashboard {
  z-index: 20;
  position: absolute;
  bottom: 20rpx;
}

.dashboard .dashboard-icon {
  width: 70rpx;
  height: 70rpx;
  padding: 10rpx;
  background: #e0dede;
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
}