/* miniprogram/pages/detail/detail.wxss */
@import "../../static/css/page.wxss";
@import "../../static/css/decorator.wxss";

.container {
  width: 700rpx;
  margin: 30rpx 0;
  padding-bottom: 100rpx;
}

.main-info-board, .statistics-board, .my-answer-board {
  background: #f0f0f0;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.main-info-board .title {
  font-size: 38rpx;
  color: #444444;
  padding-bottom: 15rpx;
}

.statistics-board .title, .my-answer-board .title {
  padding-bottom: 10rpx;
}

.main-info-board .created-at {
  color: #777777;
  padding-top: 5rpx;
}

.statistics-board {
  color: #444444;
}

.my-answer-board .content {
  position: relative;
}

.my-answer-board .content .icon {
  position: absolute;
  bottom: 0;
  right: 0;
}

.my-answer-board .content .icon image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 100%;
  background: #cccccc;
  margin: 0 10rpx;
  padding: 10rpx;
  vertical-align: bottom;
}

.my-answer-board .content .icon text {
  line-height: 75rpx;
  vertical-align: bottom;
  display: inline-block;
}

.dashboard {
  z-index: 20;
  position: fixed;
  bottom: 20rpx;
}

.dashboard .dashboard-icon {
  width: 60rpx;
  height: 60rpx;
  padding: 20rpx;
  border-radius: 100%;
  box-shadow: 0 0 20rpx #333333;
  background: #f0f0f0;
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
}
