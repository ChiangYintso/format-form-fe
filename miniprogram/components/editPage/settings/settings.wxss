/* components/editPage/settings/settings.wxss */
@import "../../../static/css/decorator.wxss";
.container {
  background: #f0f0f0;
  width: 100%;
  height: 100%;
}

.container .header {
  text-align: center;
  font-size: 40rpx;
  padding: 30rpx;
}

.container .setting-item {
  padding: 30rpx 30rpx 30rpx 15rpx;
  position: relative;
  width: 80%;
  margin: 0 auto;
}

.container .setting-item text {
  line-height: 50rpx;
  height: 50rpx;
}

.container .setting-item switch {
  position: absolute;
  right: 0;
}

.picker {
  color: #666666;
}

.done-btn {
  width: 300rpx;
  height: 100rpx;
  background: #075b92;
  color: #f0f0f0;
  position: absolute;
  bottom: 40rpx;
  left: calc(50% - 150rpx);
  text-align: center;
  line-height: 100rpx;
  border-radius: 10rpx;
}