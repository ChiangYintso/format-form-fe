/* components/header/header.wxss */
.header {
  width: 700rpx;
  background: #eeeeee;
  height: 100rpx;
  align-items: center;
  display: flex;
  margin: 20rpx 0;
  border-radius: 0;
}

.header::after {
  border: none;
}

.header .avatar {
  border-radius: 100%;
  height: 70rpx;
  flex: 0 0 70rpx;
}

.header .intro {
  flex: 1;
  justify-content: center;
  overflow: hidden;
}