/**app.wxss**/
page {
  background: #f6f6f6;
  display: flex;
  justify-content: center;
  font-size: 32rpx;
  font-family: "PingFangSC-Thin";
  margin: 0;
}

/* global flex layout */
.global-layout-container {
  width: 90%;
  height: 800rpx;
}

.global-layout-container .global-layout-row {
  display: flex;
}

.global-layout-row .global-layout-cell {
  display: flex;
  flex: 1;
  border: 1rpx solid #000000;
  justify-content: center;
  align-items: center;
  margin: 20rpx;
  line-height: 280rpx;
  border-radius: 20rpx;
}